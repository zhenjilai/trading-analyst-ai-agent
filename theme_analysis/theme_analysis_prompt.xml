          </ConcentrationRisk>
        </CrossThemeAnalysis>

        <RiskAssessment>
          <SystematicRisks>
            <InterestRateSensitivity description="theme sensitivity to rate changes"/>
            <GeopoliticalExposure description="theme vulnerability to international events"/>
            <RegulatoryRisk description="policy uncertainty impact by theme"/>
